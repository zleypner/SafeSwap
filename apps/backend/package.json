		"@types/node": "^22.10.7",
		"@types/supertest": "^6.0.2",
		"globals": "^15.14.0",
		"jest": "^29.7.0",
		"prisma": "^6.3.1",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
